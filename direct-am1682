###### Use DNS Entrys and add all am1682 ip address to the Route Rules for direct connection #
:local DateTime ([ / system clock get date ] . " " . [ / system clock get time ])
:foreach i in=[/ip dns cache all find where (name~".am1682.com") && (type="A") && (data!="240.0.0.1")] do={
 :local tmpAddress [/ip dns cache get $i address];
delay delay-time=100ms
# prevent script from using all cpu time #
 :if ( [/ip route rule find where dst-address="$tmpAddress/32"] = "") do={ 
 :local cacheName [/ip dns cache get $i name] ;
 :log info ("added entry: $cacheName $tmpAddress");
 /ip route rule add dst-address=$tmpAddress comment=("Script-Added-$cacheName" . " - " . $DateTime) routing-mark=LAN-Auto action=lookup table=main; } }
